<Window x:Class="RevisoftApplication.wInputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Revisoft" Width="300" Height="160" WindowStyle="ToolWindow" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" Left="120" Top="50" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <TextBlock Name="CaptionTextBlock" Text="Inserimento dati" Margin="0,0,0,5" HorizontalAlignment="Center" FontWeight="Bold" />
        <Grid Height="Auto" Margin="0,10,0,0" Width="Auto">
            <TextBox Name="ResponseTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="25" KeyUp="ResponseTextBox_KeyUp" />
        </Grid>
        <Grid Height="Auto" Margin="0,10,0,0" Width="Auto">
            <Button Content="OK" Height="23" Click="Button_Click" Width="75" Margin="27,4,146.6,5.4"/>
            <Button Content="Chiudi" Height="23" HorizontalAlignment="Left" Margin="167,4,0,0" x:Name="buttonChiudi" VerticalAlignment="Top" Width="75" Click="buttonChiudi_Click" />
        </Grid>


    </StackPanel>
</Window>
