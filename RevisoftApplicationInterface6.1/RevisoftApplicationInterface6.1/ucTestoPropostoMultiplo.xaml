<UserControl x:Class="UserControls.ucTestoPropostoMultiplo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConvNS" 
             xmlns:uc="clr-namespace:UserControls"
             mc:Ignorable="d"               
             SizeChanged="UserControl_SizeChanged"
             Loaded="UserControl_Loaded"
             Focusable="True">
    <UserControl.Resources>
        <Style TargetType="Image">
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>
    </UserControl.Resources>
    <Border CornerRadius="10">
        <Grid Name="g" HorizontalAlignment="Stretch" Width="Auto" MinWidth="350" MinHeight="150">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>     
        </Grid>
    </Border>
</UserControl>
