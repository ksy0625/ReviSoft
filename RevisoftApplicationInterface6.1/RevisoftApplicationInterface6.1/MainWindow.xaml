<Window x:Class="RevisoftApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="REVISOFT - Il software per sindaci e revisori" 
        Height="680" 
        Width="1100" 
        FontWeight="Bold"
        WindowStyle="SingleBorderWindow" 
        Icon="/Images/icone/revisoftdatev.ico"
        Background="WhiteSmoke" 
        WindowStartupLocation="CenterOwner" 
        
        WindowState="Maximized"
        Closing="MainWindow_Closed">

  <Window.Resources>
    <SolidColorBrush x:Key="buttonHover" Color="#FF8BA2B2"/>
    <Style x:Key="StackPanelStyle"  TargetType="{x:Type StackPanel}">
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <!--<Setter Property="Background" Value="#FF8BA2B2"/>-->
          <!--<Setter Property="Background" Value="#59FFFFFF"/>-->
          <Setter Property="Background" Value="{DynamicResource buttonHover}"/>
        </Trigger>
      </Style.Triggers>
    </Style>
    <Style x:Key="TransparentStyle" TargetType="{x:Type Button}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="Transparent">
              <ContentPresenter/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Height" Value="75"/>
    </Style>
    <Style x:Key="StackPanelStyleW"  TargetType="{x:Type StackPanel}">
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="Gainsboro"/>

        </Trigger>
      </Style.Triggers>

    </Style>
    <Style x:Key="TransparentStyleWNB" TargetType="{x:Type Button}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Padding="0,0,0,0">
              <ContentPresenter/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Cursor" Value="Hand"/>
        </Trigger>
      </Style.Triggers>

    </Style>
    <Style x:Key="TransparentStyleW" TargetType="{x:Type Button}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="Transparent" BorderBrush="Gainsboro" BorderThickness="2" Padding="0,0,0,0">
              <ContentPresenter/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Cursor" Value="Hand"/>
        </Trigger>
      </Style.Triggers>

    </Style>
    <Style TargetType="Image">
      <Setter Property="Margin" Value="0,8,0,0"/>
    </Style>
  </Window.Resources>

  <DockPanel>
    <Menu DockPanel.Dock="Top" Background="#FFBCBCBC" FontWeight="Normal">

      <MenuItem Header="File">
        <MenuItem Header="Esci" Click="menuFileEsci_Click" />
      </MenuItem>

      <MenuItem Header="?">
        <MenuItem Header="Guida Operativa" Click="menuInfoGuida_Click" />
        <MenuItem Header="Documenti di Revisione" Click="menuInfoDocRevisione_Click" />
        <MenuItem Header="Documenti di Vigilanza" Click="menuInfoDocVigilanza_Click" />
        <MenuItem Header="Note di Rilascio" Click="menuInfoNoteRilascio_Click" />
