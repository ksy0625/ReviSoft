          <Button Height="70" Name="btn_RotazioneScorte" Visibility="Collapsed"  Style="{StaticResource TransparentStyle}"  ToolTip="Rotazione Scorte" Width="110" Margin="0,10,0,0" Click="btn_RotazioneScorte_Click">
