<Window x:Class="RevisoftApplication.wSceltaTipologiaCaricamentoDatiConsolidato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"         
        Title="Revisoft - Scalta tipologia Caricamento Dati" 
        ResizeMode="NoResize" 
        WindowStyle="ToolWindow" 
        Icon="/RevisoftApplication;component/Images/Revisoft.ico" 
        WindowStartupLocation="CenterScreen" Left="120" Top="50"
        mc:Ignorable="d" 
        Background="WhiteSmoke" 
        SizeToContent="WidthAndHeight" Height="209" Width="502.551" ShowInTaskbar="False"
        >
    <StackPanel Background="WhiteSmoke" Height="Auto" HorizontalAlignment="Left" Name="stackPanel1" VerticalAlignment="Top" Width="458" Margin="3,0">
        <Label Content="Scelta tipologia Caricamento Dati" FontSize="16" FontWeight="Bold" Name="labelTitolo" Foreground="#FFF5A41C" Margin="0,0,0,0" Grid.ColumnSpan="2" />
        <TextBlock Text="" Name="TitoloBilancio" TextWrapping="Wrap" Margin="10,0" FontWeight="Bold" />

        <StackPanel Height="Auto" Margin="0,0,-21.4,0">
            <RadioButton Name="rdbBVEA" Content="Bilancio di verifica Consolidato Esercizio Attuale" GroupName="bilancio" Margin="10, 10, 10, 0"></RadioButton>
            <RadioButton Name="rdbBVEP" Content="Bilancio di verifica Consolidato Esercizio Precedente" GroupName="bilancio" Margin="10, 5, 10, 0"></RadioButton>
            <RadioButton x:Name="rdbBV" Content="Modifica correlazioni fra Bilancio di Verifica e Voci di Bilancio Consolidato" GroupName="bilancio" Margin="10, 10, 10, 0"/>
            <RadioButton x:Name="rdbBVCancella" Content="Cancella TUTTE le correlazioni fra Bilancio di Verifica e Voci di Bilancio Consolidato" GroupName="bilancio" Margin="10, 10, 10, 0"/>
        </StackPanel>


        <Grid Margin="0,20,0,10" Height="Auto">
            <Button Content="Applica" HorizontalAlignment="Left" Margin="361,-10,0,10.6" Name="buttonComando" Width="75" Click="buttonApplica_Click" />
        </Grid>

    </StackPanel>
</Window>
